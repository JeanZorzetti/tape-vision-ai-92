# Environment Configuration
NODE_ENV=development
PORT=3001

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# Database Configuration
MONGODB_URL=mongodb://localhost:27017/tape-vision-trading

# Nelogica API Configuration
NELOGICA_API_URL=https://api.nelogica.com.br
NELOGICA_USERNAME=your_username
NELOGICA_PASSWORD=your_password
NELOGICA_DLL_PATH=C:\Program Files\Nelogica\PROFIT\AutomationAPI.dll
NELOGICA_ENV=demo

# Trading Configuration
TRADING_SYMBOL=WDO
TRADING_TIMEFRAME=60000
AUTO_START_ENGINE=false

# Risk Management
MAX_DAILY_LOSS=500
MAX_POSITION_SIZE=5
STOP_LOSS_POINTS=15
TAKE_PROFIT_POINTS=30
MAX_DRAWDOWN=1000
CONSECUTIVE_STOP_LIMIT=3
MINIMUM_CONFIDENCE=90

# Logging
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=5242880
LOG_FILE_MAX_FILES=5

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# JWT Configuration (for API authentication)
JWT_SECRET=your-super-secure-jwt-secret
JWT_EXPIRES_IN=24h

# Security
API_RATE_LIMIT=100
CORS_ORIGIN=http://localhost:5173